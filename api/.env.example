# ===================================================
# DR-PHARMA API - Environment Configuration
# ===================================================
# Copy this file to .env and configure your values
# cp .env.example .env && php artisan key:generate
# ===================================================

APP_NAME="DR-PHARMA"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ===================================================
# Logging Configuration
# ===================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===================================================
# Database Configuration
# ===================================================
# For SQLite (default for development):
DB_CONNECTION=sqlite
# Note: Create the database file: touch database/database.sqlite

# For MySQL (production):
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=drpharma
# DB_USERNAME=root
# DB_PASSWORD=

# ===================================================
# Session & Cache Configuration
# ===================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# ===================================================
# Redis Configuration (optional)
# ===================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===================================================
# Mail Configuration
# ===================================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@drpharma.ci"
MAIL_FROM_NAME="${APP_NAME}"

# ===================================================
# AWS Configuration (optional)
# ===================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===================================================
# CinetPay Payment Gateway
# ===================================================
# Get your credentials at: https://cinetpay.com
CINETPAY_API_KEY=your_cinetpay_api_key
CINETPAY_SITE_ID=your_cinetpay_site_id
CINETPAY_SECRET_KEY=your_cinetpay_secret_key
CINETPAY_BASE_URL=https://api-checkout.cinetpay.com/v2
CINETPAY_RETURN_URL=http://localhost:8000/payment/return

# ===================================================
# JEKO Payment Gateway
# ===================================================
# Documentation: https://cockpit.jeko.africa → Settings → Webhook & API
JEKO_API_URL=https://api.jeko.africa
JEKO_API_KEY=your_jeko_api_key
JEKO_API_KEY_ID=your_jeko_api_key_id
JEKO_STORE_ID=your_jeko_store_id
JEKO_WEBHOOK_SECRET=your_jeko_webhook_secret

# MODE PAIEMENT: false = Production (paiement réel), true = Sandbox (simulation)
JEKO_SANDBOX_MODE=true

# URLs de callback pour Jeko (DOIVENT être des URLs HTTPS publiques en production)
JEKO_RETURN_URL=https://your-domain.com/api/payments/callback/success
JEKO_ERROR_URL=https://your-domain.com/api/payments/callback/error

# SECURITY: Whitelist des IPs autorisées pour les webhooks Jeko
# Format: liste d'IPs séparées par des virgules
# IMPORTANT: En production, cette variable DOIT être configurée
JEKO_WEBHOOK_IPS=

# ===================================================
# Firebase Configuration (Push Notifications)
# ===================================================
# Download credentials JSON from Firebase Console
FIREBASE_CREDENTIALS=storage/app/firebase-credentials.json

# ===================================================
# SMS Configuration
# ===================================================
SMS_DRIVER=log
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=DRPHARMA

# ===================================================
# Debug Tools
# ===================================================
TELESCOPE_ENABLED=true

# ===================================================
# Frontend URL (for CORS)
# ===================================================
FRONTEND_URL=http://localhost:3000

VITE_APP_NAME="${APP_NAME}"
