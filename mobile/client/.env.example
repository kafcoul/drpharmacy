# DR-PHARMA User App - Configuration Environnement
# Copiez ce fichier en .env et remplissez les valeurs

# ===========================================
# API Configuration
# ===========================================

# URL de base de l'API (sans /api à la fin)
# Développement: http://localhost:8000
# Staging: https://staging-api.drpharma.ci
# Production: https://api.drpharma.ci
API_BASE_URL=http://localhost:8000

# URL de stockage des fichiers
# Développement: http://localhost:8000/storage
# Production: https://api.drpharma.ci/storage
STORAGE_BASE_URL=http://localhost:8000/storage

# ===========================================
# Environment
# ===========================================

# Environnement actuel: development, staging, production
APP_ENV=development

# Mode debug (true en dev, false en prod)
DEBUG_MODE=true

# ===========================================
# Firebase (optionnel - pour notifications)
# ===========================================

# Ces valeurs sont dans google-services.json / GoogleService-Info.plist
# Pas besoin de les définir ici sauf pour web

# ===========================================
# Google Maps
# ===========================================

# Clé API Google Maps (pour Android, iOS et Web)
# Obtenez-la sur: https://console.cloud.google.com
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# ===========================================
# Sécurité
# ===========================================

# Forcer HTTPS en production (recommandé: true)
FORCE_HTTPS=false

# Timeout de connexion en millisecondes
CONNECTION_TIMEOUT=30000
RECEIVE_TIMEOUT=30000
